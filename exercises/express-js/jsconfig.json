{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": false,
    "checkJs": true,
    "allowJs": true,
    "esModuleInterop": true,
    "strict": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*",
    "server.js",
    "*.js"
  ],
  "exclude": [
    "node_modules",
    "generated",
    "src/common/tests/**/*",
  ]
}
